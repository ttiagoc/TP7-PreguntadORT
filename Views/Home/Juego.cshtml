      }
         </div> 
    
    


  
   <div class="col">

<div class="quiz pt-4 text-center" id="quiz" data-toggle="buttons">
      @foreach (Respuestas resp in @ViewBag.ContenidoRespuesta)
            { 
                <div class="row-sm pt-2">
