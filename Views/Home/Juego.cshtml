    

    <div class="contenidoPreg">
    <div class="container">
    <h3 class="text-center">Tiempo: @ViewBag.Segundos segundos</h1>
    <h1 class="text-center">@ViewBag.ContenidoPregunta.Enunciado</h1>
    
        
    <div class="text-center pt-3 pb-3">
      @if (@ViewBag.ContenidoPregunta.Foto != null){
